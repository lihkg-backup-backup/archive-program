d":"97d3e7b8584906557236eaf8bfd5b10d10f0e3cf","tid":403986,"uid":10071,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2017-09-19T10:18:14.000Z","msg":"睇完啲圖<img src=\"/assets/faces/normal/yipes.gif\" class=\"hkgmoji\" />"},{"pid":"b75d9978aa2ed556fd4655b8beabed9cb4a0b5c2","tid":403986,"uid":35106,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2017-09-19T10:36:28.000Z","msg":"<img src=\"/assets/faces/normal/clown.gif\" class=\"hkgmoji\" />"},{"pid":"f9001ea658d550bfb08dfafc83ee345b98cef29c","tid":403986,"uid":35639,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2017-09-19T13:21:21.000Z","msg":"<blockquote>睇完啲圖<img src=\"/assets/faces/normal/yipes.gif\" class=\"hkgmoji\" /></blockquote><br />\n<img src=\"/assets/faces/big/yipes.gif\" class=\"hkgmoji\" />"},{"pid":"582639d46fb56337f05ed4bb44fc7b97fef7939a","tid":403986,"uid":35639,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2017-09-19T14:02:18.000Z","msg":"好驚呀"},{"pid":"cff3098607223e29516034cfbe27dd8fa069cb0a","tid":403986,"uid":35639,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2017-10-09T15:27:55.000Z","msg":"<img src=\"/assets/faces/lomoji/24.png\" class=\"hkgmoji\" />"}]}