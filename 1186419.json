d":"747bc6db1bb54a2dd3a3da647aa29517e1c732e7","tid":1186419,"uid":37528,"like":1,"dislike":0,"score":1,"quote":{"pid":"5b2e733808c30688e370deb15bc94481bad5659c","tid":1186419,"uid":124107,"like":0,"dislike":6,"score":-6,"quote":{"pid":"27e3a79e1e7c1962654705393d1021667fa4818b","tid":1186419,"uid":237562,"like":4,"dislike":0,"score":4,"quote":{"pid":"4d5caf6418d5a7e5483f79bd79a9d9ec965545ce","tid":1186419,"uid":124107,"like":1,"dislike":31,"score":-30,"citedBy":3,"replyTime":"2019-06-05T03:12:15.000Z","msg":"此回覆已被刪除"},"citedBy":1,"replyTime":"2019-06-05T03:14:16.000Z","msg":"你老母"},"citedBy":1,"replyTime":"2019-06-05T03:17:57.000Z","msg":"此回覆已被刪除"},"citedBy":0,"replyTime":"2019-06-05T05:02:32.000Z","msg":"睇見你見著自己老母日日俾人屌，仲要扮自己唔care，我真係笑撚左出聲<img src=\"/assets/faces/normal/369.gif\" class=\"hkgmoji\" />"}]}