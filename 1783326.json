/>"},{"pid":"b5fd7a35280c4da911b151dd2a36173632d9f087","tid":1783326,"uid":14361,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2019-12-14T21:15:10.000Z","msg":"推呀！<img src=\"/assets/faces/normal/angry.gif\" class=\"hkgmoji\" />"},{"pid":"40a63f00c2ba7f6ea0e07a175301468144a423b9","tid":1783326,"uid":103890,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2019-12-14T21:34:37.000Z","msg":"其實佢哋偷偷哋加料真係冇人知<img src=\"/assets/faces/fs/smile.gif\" class=\"hkgmoji\" />"},{"pid":"7244540717b491e41403acf5f18ee675086bea83","tid":1783326,"uid":229920,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2019-12-14T21:36:57.000Z","msg":"死警甴實係自己加料<img src=\"/assets/faces/pig/knife.gif\" class=\"hkgmoji\" />"},{"pid":"124e04d3607c9e598cea49320c7c8b28bcb93401","tid":1783326,"uid":276131,"like":0,"dislike":0,"score":0,"citedBy":0,"replyTime":"2019-12-14T21:43:21.000Z","msg":"Push"}]}